<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="Big Jump4_Unit_Lesson1_Quiz" />

    <View
        android:id="@+id/vDotted1"
        android:layout_width="3dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:background="@drawable/form_dotted_ver"
        android:layerType="software" />


    <LinearLayout
        android:id="@+id/lvEitherArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/vDotted1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="80" />


        <View
            android:id="@+id/vDotted2"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/lvStatusArea"
            android:layout_toStartOf="@+id/lvStatusArea"
            android:background="@drawable/form_dotted_ver"
            android:layerType="software" />

        <TextView
            android:id="@+id/tvAverage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="80" />


        <View
            android:id="@+id/vDotted3"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/lvStatusArea"
            android:layout_toStartOf="@+id/lvStatusArea"
            android:background="@drawable/form_dotted_ver"
            android:layerType="software" />

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="80" />

    </LinearLayout>

    <View
        android:id="@+id/vDotted"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/tv1"
        android:background="@drawable/form_dotted"
        android:layerType="software" />


</RelativeLayout>